<div class="container">
<div class="jumbotron">
<p id="notice"><%= notice %></p>


<p>
  <%= image_tag @profile.profile_pic_url(:big).to_s, class: "img-rounded img-responsive" %><br>
</p>

<p>
  <strong>Name:</strong>
  <%= @profile.name %>
</p>

<p>
  <strong>Location:</strong>
  <%= @profile.location %>
</p>


<p>
  <strong>Email:</strong>
  <%= @profile.user.email %>
</p>

<% if current_user.profile.id == @profile.id %>
<%= link_to 'Edit', edit_profile_path(@profile), class: "btn btn-warning" %> |
<% end %>
<%= link_to 'Back', profiles_path, class: "btn btn-primary" %> |
<%= link_to 'Create New Listing', new_listing_path, class:"btn btn-success" %> |
<%= link_to "Explore Listings", listings_index_path, method: :get, class:"btn btn-info" %>

<br>
<br>
</div>
</div>
