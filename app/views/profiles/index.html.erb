<p id="notice"><%= notice %></p>

<h1>Listing Profiles</h1>

<table width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Profile pic</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.location %></td>
        <td><%= image_tag profile.profile_pic.url(:thumb).to_s, class: "img-rounded" %></td>
        <td><%= profile.user_id %></td>
        <td><%= link_to 'Show', profile, class: "btn btn-warning" %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile), class: "btn btn-info" %></td>
        <td><%= link_to 'Delete', profile, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

