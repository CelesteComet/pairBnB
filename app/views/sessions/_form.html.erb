<%= form_for :session, url: session_path do |form| %>
  <div class="form-group">
  <div class="text-field">
    <%= form.label :email, class: "h3" %>
    <%= form.text_field :email, type: 'email', class: "form-control" %>
  </div>

  <div class="password-field">
    <%= form.label :password, class: "h3" %>
    <%= form.password_field :password, class: "form-control" %>
  </div>

   <br>
    <br>

  <div class="submit-field">
    <%= form.submit "Sign In", class: "btn btn-lg btn-success" %>
    <a href="/auth/facebook" class="btn btn-lg btn-primary">
    <i class="fa fa-facebook"></i> Log In with Facebook </a>

    <div class="other-links" style="float: right;">
    <%= link_to t(".forgot_password"), new_password_path, class: "btn btn-lg btn-warning" %>
    <% if Clearance.configuration.allow_sign_up? %>
      <%= link_to "New User?", sign_up_path, class: "btn btn-lg btn-success" %>
    </div>

  </div> 
    <% end %>



  </div>

  <br>
<% end %>

