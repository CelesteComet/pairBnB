<div class="container">
<div class="jumbotron">
<h2>Payment Page</h2>

<%= form_for(@transaction) do |f| %>

    <div class="field">
    <%= image_tag @reservation.listing.listingpics.first.url(:mid).to_s, class: "img-rounded" %>
  </div>
    <div class="field">
    <h2><%= @reservation.listing.name %></h2>
  </div>
  <div class="lead">
    <%= f.label :from %><br>
    <%= @reservation.checkin %>
  </div>
  <div class="lead">
    <%= f.label :until %><br>
    <%= @reservation.checkout %>
  </div>
  <div class="lead">
    <%= f.label :requests %><br>
    <%= @reservation.specialrequests %>
  </div>
  <div class="lead">
    <%= f.label :Total %><br>
    <span class="label label-warning"><%= @reservation.total_price %> USD </span>
  </div>
  <div class="field">
    <%= f.hidden_field :reservation_id, value: @reservation.id %>
  </div>
  <div class="field">
    <%= f.hidden_field :total_price, value: @reservation.total_price %>
  </div>
  <div class="field">
    <div id="dropin"></div>
  </div>
   <br>
  <div class="actions">
    <%= f.submit "Pay Now", class: "btn btn-danger"%>
  </div>
<% end %>


<script src="https://js.braintreegateway.com/js/braintree-2.22.2.min.js"></script>
       <script>
         braintree.setup("<%=@client_token%>", "dropin", {
           container: "dropin"
         });

       </script>

</div>
</div>